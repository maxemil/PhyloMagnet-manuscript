journal = {bioRxiv},
mendeley-groups = {PhyloMagnet},
pages = {291658},
title = {{EPA-ng: Massively Parallel Evolutionary Placement of Genetic Sequences}},
url = {https://academic.oup.com/sysbio/advance-article-abstract/doi/10.1093/sysbio/syy054/5079844 https://www.biorxiv.org/content/early/2018/04/17/291658{\%}0Ahttps://www.biorxiv.org/content/early/2018/03/29/291658},
