journal = {BMC bioinformatics},
keywords = {Algorithms,Codon,Codon: genetics,DNA,DNA: chemistry,Databases, Genetic,Genome,Phylogeny,Proteins,Proteins: chemistry,Sequence Alignment,Sequence Alignment: methods,Sequence Analysis, DNA,Software},
mendeley-groups = {PhyloMagnet},
number = {1},
pages = {579},
pmid = {21110866},
publisher = {BioMed Central Ltd},
title = {{webPRANK: a phylogeny-aware multiple sequence aligner with interactive alignment browser.}},
url = {http://www.biomedcentral.com/1471-2105/11/579},
volume = {11},
