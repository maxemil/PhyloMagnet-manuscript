pages = {268--274},
pmid = {25371430},
shorttitle = {{\{}IQ{\}}-{\{}TREE{\}}},
title = {{IQ-TREE: A fast and effective stochastic algorithm for estimating maximum-likelihood phylogenies}},
url = {https://academic.oup.com/mbe/article/32/1/268/2925592/IQ-TREE-A-Fast-and-Effective-Stochastic-Algorithm},
volume = {32},
